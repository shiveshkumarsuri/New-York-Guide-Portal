<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body register-card">
            <img src="/img/NYGIcon-white.png" alt="logo" class="logo">
            <h3 class="text-center">Sign Up</h3>
            <form action="/users/register" method="post">

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class= "form-control" name="name" required value={{name}} >
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class= "form-control" name="email" required value={{email}} >
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class= "form-control" required name="password" value={{password}}>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" class= "form-control" required name="password2" value={{password2}}>
                </div>
                <button type="submit" class="btn  btn-lg btn-block btn-register">Sign Up</button>

            </form>
        </div>
    </div>
</div>